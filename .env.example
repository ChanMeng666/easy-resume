# ===========================================
# Vitex - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# -------------------------------------------
# Stack Auth Configuration
# Get these from https://app.stack-auth.com/
# -------------------------------------------
NEXT_PUBLIC_STACK_PROJECT_ID=
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=
STACK_SECRET_SERVER_KEY=

# -------------------------------------------
# Database (Neon PostgreSQL)
# Get connection string from https://neon.tech/
# -------------------------------------------
DATABASE_URL=

# -------------------------------------------
# Vercel Blob Storage (for PDF files)
# Get token from Vercel Dashboard -> Storage -> Blob
# -------------------------------------------
BLOB_READ_WRITE_TOKEN=

# -------------------------------------------
# Upstash Redis (for temporary share links)
# Get credentials from https://upstash.com/
# -------------------------------------------
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# -------------------------------------------
# OpenAI API (for AI suggestions)
# Get API key from https://platform.openai.com/
# -------------------------------------------
OPENAI_API_KEY=

# -------------------------------------------
# Application URL
# -------------------------------------------
# Local development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Production (update this to your deployed URL)
# NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
